---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Content from '../components/Content.astro';
import BaseHead from '../components/BaseHead.astro';

const pageParam = Astro.url.searchParams.get('page') ?? '';

const notes = import.meta.glob('../content/notas/CCNA/notes/**/*.md');
const pageSlugs = Object.keys(notes)
	.map((route) =>
		route
			.replace('../content/notas/CCNA/notes/', '')
			.replace(/\.md$/, ''),
	)
	.sort((a, b) => a.localeCompare(b, undefined, { numeric: true, sensitivity: 'base' }));

let module;
let currentSlug: string | null = null;

if (pageParam) {
	const decodedFilename = decodeURIComponent(pageParam);
	const route = `../content/notas/CCNA/notes/${decodedFilename}.md`;

	if (notes[route]) {
		module = await notes[route]!();
		currentSlug = decodedFilename;
	} else {
		module = await import('../content/notas/CCNA/index.md');
	}
} else {
	module = await import('../content/notas/CCNA/index.md');
}

const pageContent = (module as { default: unknown }).default;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="CCNA Notes" description="CCNA notes" />
	</head>
	<body>
		<Header />
		<main>
			<Content Content={pageContent} pageSlugs={pageSlugs} currentSlug={currentSlug} title={`${decodeURIComponent(pageParam)}`}/>
			<!-- <MarkdownTree headings={headings} /> -->
		</main>
		<Footer />
	</body>
</html>

<style>

	main {
		display: flex;
		flex-direction: row;
		gap: 1rem;
	}
</style>