---
import Buttons from './UI/Buttons';

const props = Astro.props as {
	Content: (...args: any[]) => any;
	pageSlugs?: string[];
	currentSlug?: string | null;
	title: string;
};
const PageContent = props.Content;
const pageSlugs = props.pageSlugs ?? [];
const currentSlug = props.currentSlug ?? null;
---
<container>

	<Buttons client:load pages={pageSlugs} currentSlug={currentSlug} />
	<aside>{props.title}</aside>

	<article class="content">
		<PageContent />
	</article>

</container>

<style>
	
	aside{
		text-decoration: underline;
		font-size: 3rem;
		font-weight: 600;
		color: var(--accent);
		&:hover{
			cursor: pointer;
		}
	}

	button {
		background-color: var(--accent);
		color: white;
		border: none;
		&:hover{
			cursor: pointer;
		}
	}


	.content {
		max-width: 100%;
		width: 100%;
		margin: 0;
		line-height: 1.7;
		color: #333;
	}

	:global(html[data-theme='dark']) .content {
		color: #e0e0e0;
	}

	/* Headings */
	.content :global(h1),
	.content :global(h2),
	.content :global(h3),
	.content :global(h4),
	.content :global(h5),
	.content :global(h6) {
		margin-top: 2rem;
		margin-bottom: 1rem;
		font-weight: 700;
		line-height: 1.3;
		color: #1a1a1a;
	}

	.content :global(h1) {
		font-size: 2.5rem;
		border-bottom: 2px solid #e0e0e0;
		padding-bottom: 0.5rem;
	}

	.content :global(h2) {
		font-size: 2rem;
		border-bottom: 1px solid #e0e0e0;
		padding-bottom: 0.3rem;
	}

	.content :global(h3) {
		font-size: 1.5rem;
	}

	.content :global(h4) {
		font-size: 1.25rem;
	}

	:global(html[data-theme='dark']) .content :global(h1),
	:global(html[data-theme='dark']) .content :global(h2),
	:global(html[data-theme='dark']) .content :global(h3),
	:global(html[data-theme='dark']) .content :global(h4),
	:global(html[data-theme='dark']) .content :global(h5),
	:global(html[data-theme='dark']) .content :global(h6) {
		color: #f0f0f0;
		border-color: #444;
	}

	/* Paragraphs */
	.content :global(p) {
		margin-bottom: 1.25rem;
	}

	/* Links */
	.content :global(a) {
		color: var(--accent, #0066cc);
		text-decoration: underline;
		text-decoration-thickness: 2px;
		text-underline-offset: 2px;
		transition: color 0.2s;
	}

	.content :global(a:hover) {
		color: var(--accent, #0052a3);
		text-decoration-thickness: 3px;
	}

	/* Lists */
	.content :global(ul),
	.content :global(ol) {
		margin-bottom: 1.25rem;
		padding-left: 2rem;
	}

	.content :global(li) {
		margin-bottom: 0.5rem;
	}

	.content :global(li) :global(p) {
		margin-bottom: 0.5rem;
	}

	.content :global(ul) {
		list-style-type: disc;
	}

	.content :global(ol) {
		list-style-type: decimal;
	}

	/* Code blocks */
	.content :global(pre) {
		background-color: #f5f5f5;
		border: 1px solid #ddd;
		border-radius: 0.5rem;
		padding: 1rem;
		overflow-x: auto;
		margin-bottom: 1.25rem;
		font-size: 0.9rem;
		line-height: 1.6;
	}

	:global(html[data-theme='dark']) .content :global(pre) {
		background-color: #1e1e1e;
		border-color: #444;
		color: #d4d4d4;
	}

	.content :global(code) {
		background-color: #f5f5f5;
		padding: 0.2em 0.4em;
		border-radius: 0.25rem;
		font-size: 0.9em;
	}

	.content :global(pre) :global(code) {
		background-color: transparent;
		padding: 0;
	}

	:global(html[data-theme='dark']) .content :global(code) {
		background-color: #2d2d2d;
		color: #d4d4d4;
	}

	/* Blockquotes */
	.content :global(blockquote) {
		border-left: 4px solid var(--accent, #0066cc);
		padding-left: 1rem;
		margin-left: 0;
		margin-bottom: 1.25rem;
		color: #666;
		font-style: italic;
	}

	:global(html[data-theme='dark']) .content :global(blockquote) {
		border-color: var(--accent);
		color: #aaa;
	}

	/* Horizontal rules */
	.content :global(hr) {
		border: none;
		border-top: 2px solid #e0e0e0;
		margin: 2rem 0;
	}

	:global(html[data-theme='dark']) .content :global(hr) {
		border-color: #444;
	}

	/* Tables */
	.content :global(table) {
		width: 100%;
		border-collapse: collapse;
		margin-bottom: 1.25rem;
	}

	.content :global(th),
	.content :global(td) {
		border: 1px solid #ddd;
		padding: 0.75rem;
		text-align: left;
	}

	.content :global(th) {
		background-color: #f5f5f5;
		font-weight: 600;
	}

	:global(html[data-theme='dark']) .content :global(th),
	:global(html[data-theme='dark']) .content :global(td) {
		border-color: #444;
	}

	:global(html[data-theme='dark']) .content :global(th) {
		background-color: #2d2d2d;
	}

	/* Images */
	.content :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: 0.5rem;
		margin: 1.5rem 0;
	}

	/* Strong and emphasis */
	.content :global(strong) {
		font-weight: 700;
		color: #1a1a1a;
	}

	:global(html[data-theme='dark']) .content :global(strong) {
		color: #f0f0f0;
	}

	.content :global(em) {
		font-style: italic;
	}
</style>