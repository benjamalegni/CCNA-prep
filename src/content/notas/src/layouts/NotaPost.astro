---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'ccna'>;

const { id, data, body } = Astro.props;
const title = data.title || id.split('/').pop()?.replace('.md', '') || 'Nota sin t√≠tulo';
---

<html lang="es">
	<head>
		<BaseHead title={title} description={`Notas CCNA: ${title}`} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.prose {
				width: 960px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
				color: rgb(var(--text-secondary));
			}
			.prose h1 {
				color: rgb(var(--text-primary));
				margin-bottom: 1.5em;
				border-bottom: 2px solid rgb(var(--bg-secondary));
				padding-bottom: 0.5em;
			}
			.prose h2 {
				color: rgb(var(--text-primary));
				margin-top: 2em;
				margin-bottom: 1em;
				border-bottom: 1px solid rgb(var(--bg-secondary));
				padding-bottom: 0.3em;
			}
			.prose h3 {
				color: rgb(var(--text-primary));
				margin-top: 1.5em;
				margin-bottom: 0.8em;
			}
			.prose h4 {
				color: rgb(var(--text-primary));
				margin-top: 1.2em;
				margin-bottom: 0.6em;
			}
			.prose p {
				margin-bottom: 1em;
				line-height: 1.7;
			}
			.prose ul,
			.prose ol {
				margin-bottom: 1em;
				padding-left: 2em;
			}
			.prose li {
				margin-bottom: 0.5em;
				line-height: 1.6;
			}
			.prose strong {
				color: rgb(var(--text-primary));
				font-weight: 700;
			}
			.prose a {
				color: var(--accent);
				text-decoration: underline;
			}
			.prose a:hover {
				color: var(--accent-dark);
			}
			.prose code {
				padding: 2px 6px;
				background-color: rgb(var(--bg-secondary));
				border-radius: 3px;
				font-size: 0.9em;
			}
			.prose pre {
				padding: 1.5em;
				border-radius: 8px;
				background-color: rgb(var(--bg-secondary));
				overflow-x: auto;
				margin-bottom: 1.5em;
			}
			.prose pre code {
				background: none;
				padding: 0;
			}
			.prose blockquote {
				border-left: 4px solid var(--accent);
				padding-left: 1.5em;
				margin: 1.5em 0;
				color: rgb(var(--text-muted));
				font-style: italic;
			}
			.prose hr {
				border: none;
				border-top: 2px solid rgb(var(--bg-secondary));
				margin: 2em 0;
			}
			.prose img {
				max-width: 100%;
				height: auto;
				border-radius: 8px;
				margin: 1.5em 0;
			}
			.prose table {
				width: 100%;
				border-collapse: collapse;
				margin: 1.5em 0;
			}
			.prose th,
			.prose td {
				border: 1px solid rgb(var(--bg-secondary));
				padding: 0.75em;
				text-align: left;
			}
			.prose th {
				background-color: rgb(var(--bg-secondary));
				color: rgb(var(--text-primary));
				font-weight: 600;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="prose">
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
